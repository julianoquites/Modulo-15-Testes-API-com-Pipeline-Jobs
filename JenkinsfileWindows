pipeline {
    agent any
    stages {
        stage('Clonar repositório') {
            steps {
                git branch: 'main', url: 'https://github.com/julianoquites/Modulo-15-Testes-API-com-Pipeline-Jobs.git'
            }
        }
        stage('Instalar dependências') {
            steps {
                bat 'npm install'
            }
        }
        stage('Subir servidor') {
            steps {
                bat 'npm run ci'
            }
        }
        stage('Executar Testes') {
            steps {
                bat '''set NO_COLOR=1
npx cypress run'''
            }

        }
    }
}